section.hero
  .socials.hero__icons
  -
    var socials = [
      ["vk", "https://vk.com/sonin_anton"],
      ["github", "https://github.com/AntonSonin"],
      ["in", ""]
    ]
  .hero__links
    ul.socials
      each item in socials
        li.socials__item
          a(href=`${item[1]}`).socials__link
            +icon(item[0], "socials__link-icon")

  a.hamburger.hero__menu
    +icon("hamburger", "hero__menu-hamburger")

  .hero__title
    .section-title
      //- image(imagePath, imageAlt, imageClass)
    .user.hero__user
      .user__img
        +image("avatar.jpg", "Антон Сонин", "user__img-pic")
      .user__desc
        h1.user__name Антон Сонин
        p.user__info Личный сайт веб-разработчика

  .hero__arrow-scroll
    a(href="#").btn-down
      +icon("arrow_down", "arrow-down-link")

  .triangles
    +triangles("triangles__hero")